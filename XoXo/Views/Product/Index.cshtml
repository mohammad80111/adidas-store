@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<partial name="Massage" />
<div class="Container p-3" style=" margin-top:100px;">
    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Product List</h1>


        </div>

        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Create">Create new <i class="bi bi-plus"></i> </a>

        </div>
    </div>
</div>



<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">price</th>
            <th scope="col">Category</th>
            <th></th>

        </tr>
    </thead>

    @foreach (Product item in Model)
    {
        <tbody>
            <tr class="table-active">

                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>

                <td>
                    <a class="btn btn-success" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ID"> <i class="bi bi-pen"></i>  </a>

                    <a class="btn btn-danger" asp-controller="Product" asp-route-id="@item.ID" asp-action="Delete"> <i class="bi bi-trash3"></i> </a>

                </td>




            </tr>

        </tbody>
    }

</table>

