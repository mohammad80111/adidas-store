@model Product
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary text-center">new item</h2>
        </div>
        <div asp-validation-summary="All"></div> @* عشان يطلع رساله غلط *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>@* عشان يطلع رساله غلط *@

        </div>

        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>@* عشان يطلع رساله غلط *@
        </div>


        <div class="mb-3">
            <label asp-for="CategoryID"></label>
            <select class="form-control" asp-for="CategoryID" asp-items="@ViewBag.selectlistbag"></select>
        </div>


        <br />
        <hr />


        <button class="btn btn-primary" style="width:150px;" type="submit">save</button>


        <a asp-action="Index" asp-controller="Product" class="btn btn-danger">back to list</a>
    </div>


</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
